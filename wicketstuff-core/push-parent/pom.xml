<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  
  <parent>
    <artifactId>wicketstuff-core</artifactId>
    <groupId>org.wicketstuff</groupId>
    <version>1.4-SNAPSHOT</version>
  </parent>
  
  <artifactId>push-parent</artifactId>
  <packaging>pom</packaging>
  
  <name>Push - Parent</name>
  <description>See the child project "push"for more information</description>

  <developers>
    <developer>
      <id>rhansen</id>
      <name>Rodolfo Hansen</name>
      <email>rhansen@kindleit.net</email>
      <url>http://rhansen.kindleit.net</url>
      <timezone>-4</timezone>
      <organization>Kindleit.net</organization>
      <organizationUrl>http://www.kindleit.net</organizationUrl>
    </developer>
  </developers>

  <modules>
    <module>push</module>
    <module>push-examples</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <!-- USAGE: mvn license:check OR mvn license:format -->
        <groupId>com.google.code.maven-license-plugin</groupId>
        <artifactId>maven-license-plugin</artifactId>
        <configuration>
          <header>${header.location}</header>
          <aggregate>true</aggregate>
          <quiet>false</quiet>
          <failIfMissing>${license-fail-if-missing}</failIfMissing>
          <excludes>
            <exclude>**/*.jpeg</exclude>
            <exclude>**/*.swf</exclude>
          </excludes>
        </configuration>
        <executions>
          <execution>
            <goals>
              <goal>check</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.mortbay.jetty</groupId>
        <artifactId>maven-jetty-plugin</artifactId>
      </plugin>
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>bamboo</id>
      <properties>
        <license-fail-if-missing>false</license-fail-if-missing>
      </properties>
    </profile>
    <profile>
      <id>wickettraining.com-continuum</id>
      <properties>
        <license-fail-if-missing>false</license-fail-if-missing>
      </properties>
    </profile>
  </profiles>
  <properties>
    <header.location>header.txt</header.location>
    <jetty.version>6.1.14</jetty.version>
    <license-fail-if-missing>true</license-fail-if-missing>
  </properties>
</project>
