<?xml version='1.0' encoding='utf-8'?>

<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<property name="show_sql">false</property>
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>

		<property name="connection.url">jdbc:hsqldb:cdapp</property>
		<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>

		<!-- cdapp example -->
		<mapping resource="wicket/examples/cdapp/model/CD.hbm.xml"/>
		<mapping resource="wicket/examples/cdapp/model/Track.hbm.xml"/>
		<mapping resource="wicket/examples/cdapp/model/Category.hbm.xml"/>

	</session-factory>
	
</hibernate-configuration>