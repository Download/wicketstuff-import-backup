<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.wicketstuff</groupId>
	<artifactId>wicketstuff-dojo</artifactId>
	<packaging>pom</packaging>
	<version>1.4-SNAPSHOT</version>
	<name>WicketStuff Dojo</name>
	<description>An integration between Apache Wicket and Dojo Toolkit</description>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>
	
	<properties>
		<wicket.version>1.4.7</wicket.version>
		<dojo.version>1.4.2</dojo.version>
		<dojo.profile>standard</dojo.profile>
	</properties>
	
	<!--
		Deployed with Teamcity:
		http://wicketstuff.org/confluence/display/STUFFWIKI/Developer+Information
	-->
	<distributionManagement>
		<snapshotRepository>
			<id>repo</id>
			<name>Local TeamCity/Tomcat repository</name>
			<url> file:/home/wicket/tomcat/webapps/maven/repository/ </url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
		<repository>
			<id>repo</id>
			<name>Local TeamCity/Tomcat repository</name>
			<url> file:/home/wicket/tomcat/webapps/maven/repository/ </url>
		</repository>
	</distributionManagement>
	<ciManagement>
		<system>TeamCity</system>
		<url>http://wicketstuff.org/teamcity</url>
	</ciManagement>
	<repositories>
		<repository>
			<id>wicket-snaps</id>
			<url>http://wicketstuff.org/maven/repository</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>
	
	<modules>
		<module>wicketstuff-dojo-1.1-api</module>
		<module>wicketstuff-dojo-1.1-resources</module>
	</modules>
	
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.wicketstuff</groupId>
				<artifactId>wicketstuff-dojo-1.1-api</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.wicketstuff</groupId>
				<artifactId>wicketstuff-dojo-1.1-resources-${dojo.profile}</artifactId>
				<version>${project.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>
	
</project>
