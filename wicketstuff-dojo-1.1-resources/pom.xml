<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.wicketstuff</groupId>
	<parent>
		<groupId>org.wicketstuff</groupId>
		<artifactId>wicketstuff-dojo-1.1</artifactId>
		<version>${wicket.version}-SNAPSHOT</version>
	</parent>
	<artifactId>wicketstuff-dojo-1.1-resources-${dojo.profile}</artifactId>
	<packaging>jar</packaging>
	<version>${wicket.version}-SNAPSHOT</version>
	<name>WicketStuff Dojo 1.1 resources</name>
	<licenses>
		<license>
			<name>The Apache Software License, Version 2.0</name>
			<url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<!--
		Deployed with Teamcity:
		http://wicketstuff.org/confluence/display/STUFFWIKI/Developer+Information
	-->
	<distributionManagement>
		<snapshotRepository>
			<id>repo</id>
			<name>Local TeamCity/Tomcat repository</name>
			<url> file:/home/wicket/tomcat/webapps/maven/repository/ </url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
		<repository>
			<id>repo</id>
			<name>Local TeamCity/Tomcat repository</name>
			<url> file:/home/wicket/tomcat/webapps/maven/repository/ </url>
		</repository>
	</distributionManagement>
	<ciManagement>
		<system>TeamCity</system>
		<url>http://wicketstuff.org/teamcity</url>
	</ciManagement>
	<repositories>
		<repository>
			<id>wicket-snaps</id>
			<url>http://wicketstuff.org/maven/repository</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
			<releases>
				<enabled>true</enabled>
			</releases>
		</repository>
	</repositories>

	<build>
		<resources>
			<resource>
				<filtering>true</filtering>
				<directory>src/main/resources</directory>
				<includes>
					<include>**/*</include>
				</includes>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<configuration>
							<tasks>
								<property name="dojo.version" value="${dojo.version}" />
								<property name="dojo.profile" value="${dojo.profile}" />
								<!-- must be outside project's svn tree -->
								<property name="dojo.checkoutdir" value="${java.io.tmpdir}" />
								<!-- working directory -->
								<property name="dojo.pomdir" value="${user.dir}/wicketstuff-dojo-1.1-resources" />
								<echo
									message="building dojo ${dojo.version} with ${dojo.profile} profile" />
                				<!-- use ant to run buildDojo/build.xml -->
								<ant antfile="build.xml" dir="buildDojo" inheritAll="true" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>