<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

    <display-name>TinyMCE Wicket Examples</display-name>

    <servlet>
        <servlet-name>tinymce</servlet-name>
        <servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
        <init-param>
            <param-name>applicationClassName</param-name>
            <param-value>wicket.contrib.examples.tinymce.TinyMCEExampleApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>tinymce</servlet-name>
        <url-pattern>/tinymce/*</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>tinymce</welcome-file>
    </welcome-file-list>

</web-app>
