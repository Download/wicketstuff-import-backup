<?xml version="1.0" encoding="UTF-8"?>
<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wicketstuff</groupId>
  <artifactId>wicketstuff-rome-examples</artifactId>
  <packaging>war</packaging>
  <version>1.3-SNAPSHOT</version>
  <description>wicketstuff-rome example application</description>
  
  
  <dependencies>
	<dependency>
		<groupId>org.apache.wicket</groupId>
		<artifactId>wicket</artifactId>
		<version>1.3.0-SNAPSHOT</version>		
	</dependency>
	<dependency>
		<groupId>org.apache.wicket</groupId>
		<artifactId>wicket-extensions</artifactId>
		<version>1.3.0-SNAPSHOT</version>		
	</dependency>
	<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-log4j12</artifactId>
			<version>1.4.3</version>
	</dependency>	
	<dependency>
		<groupId>org.wicketstuff</groupId>
		<artifactId>wicketstuff-rome</artifactId>
		<version>1.3-SNAPSHOT</version>		
	</dependency>
  </dependencies>

  <build>
    <sourceDirectory>src/examples/java</sourceDirectory>
    <resources>
      <resource>
        <directory>src/examples/java</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>

    <plugins>
	  <plugin>
		<groupId>org.apache.maven.plugins</groupId>
		<artifactId>maven-compiler-plugin</artifactId>
		<configuration>
			<source>1.5</source>
			<target>1.5</target>
		</configuration>
	  </plugin>
		<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<configuration>
					<minmemory>128m</minmemory>
					<maxmemory>256m</maxmemory>
				</configuration>
		</plugin>
        <plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webResources>
						<!--+
							| Include Java source code in the examples
							+-->
						<resource>
							<directory>${basedir}/src/examples/java</directory>
							<targetPath>WEB-INF/classes</targetPath>
							<includes>
								<include>**/*.java</include>
							</includes>
						</resource>
						<resource>
							<directory>${basedir}/src/examples/webapp</directory>
							<targetPath></targetPath>
						</resource>
					</webResources>
				</configuration>
		</plugin>		
        <plugin>
          <groupId>org.mortbay.jetty</groupId>
          <artifactId>maven-jetty-plugin</artifactId>
          <version>6.1.2</version>
          <configuration>
		  <webAppSourceDirectory>${basedir}/src/examples/webapp</webAppSourceDirectory>
            <scanIntervalSeconds>5</scanIntervalSeconds>
            <contextPath>/</contextPath>
          </configuration>
        </plugin>
      </plugins>
  </build>

  <reports>
		<report>maven-license-plugin</report>
		<report>maven-javadoc-plugin</report>
  </reports>
	
  <repositories>
    <repository>
      <id>wicket-stuff-repository</id>
      <name>Wicket-Stuff Repository</name>
      <url>http://www.wicketstuff.org/maven/repository/</url>
    </repository>
    <repository>
      <id>codecrate-repository</id>
      <name>Codecrate Maven Repository</name>
      <url>http://maven.codecrate.com/</url>
    </repository>  
  </repositories>

  <distributionManagement>
    <snapshotRepository>
      <id>wicketstuff-repo</id>
      <name>Local Bamboo/Tomcat repository</name>
      <url>file:/home/wicket/tomcat/webapps/maven/repository/</url>
    </snapshotRepository>
  </distributionManagement>
</project>

