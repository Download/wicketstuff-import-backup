<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
	  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
	  "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>

	<display-name>Wicket Contrib Examples</display-name>

	<distributable />

	<!-- TODO replace servlets with filters -->

	<servlet>
		<servlet-name>cdapp</servlet-name>
		<servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>wicket.examples.cdapp.CdApplication</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

    <servlet>
        <servlet-name>VelocityTemplateApplication</servlet-name>
        <servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
        <init-param>
          <param-name>applicationClassName</param-name>
          <param-value>wicket.contrib.examples.velocity.VelocityTemplateApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>FreeMarkerTemplateApplication</servlet-name>
        <servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
        <init-param>
          <param-name>applicationClassName</param-name>
          <param-value>wicket.contrib.examples.freemarker.FreeMarkerTemplateApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

	<servlet-mapping>
		<servlet-name>cdapp</servlet-name>
		<url-pattern>/cdapp/*</url-pattern>
	</servlet-mapping>

    <servlet-mapping>
        <servlet-name>VelocityTemplateApplication</servlet-name>
        <url-pattern>/velocitytemplate/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>FreeMarkerTemplateApplication</servlet-name>
        <url-pattern>/freemarkertemplate/*</url-pattern>
    </servlet-mapping>
	
	<welcome-file-list>
	<welcome-file>index.html</welcome-file>
	</welcome-file-list>

</web-app>
