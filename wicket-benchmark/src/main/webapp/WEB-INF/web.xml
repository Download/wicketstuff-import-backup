<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Wicket Benchmark</display-name>

	<context-param>
		<param-name>configuration</param-name>
		<param-value>deployment</param-value>
	</context-param>
 
    <filter>
    	<filter-name>Timer</filter-name>
    	<filter-class>wicket.benchmark.TimerFilter</filter-class>
   	</filter>
   	
   	<filter-mapping>
   		<filter-name>Timer</filter-name>
   		<servlet-name>wicket</servlet-name>
   	</filter-mapping>
   	
   	<filter-mapping>
   		<filter-name>Timer</filter-name>
   		<servlet-name>tapestry</servlet-name>
   	</filter-mapping>

    <servlet>
        <servlet-name>wicket-session</servlet-name>
        <servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
        <init-param>
          <param-name>applicationClassName</param-name>
          <param-value>wicket.benchmark.WicketHttpSessionStoreApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>wicket-secondlevelcache</servlet-name>
        <servlet-class>wicket.protocol.http.WicketServlet</servlet-class>
        <init-param>
          <param-name>applicationClassName</param-name>
          <param-value>wicket.benchmark.WicketSecondLevelCacheApplication</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>wicket-session</servlet-name>
        <url-pattern>/wicket-session/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>wicket-secondlevelcache</servlet-name>
        <url-pattern>/wicket-secondlevelcache/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tapestry</servlet-name>
        <servlet-class>org.apache.tapestry.ApplicationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>tapestry</servlet-name>
        <url-pattern>/app</url-pattern>
    </servlet-mapping>
</web-app>
