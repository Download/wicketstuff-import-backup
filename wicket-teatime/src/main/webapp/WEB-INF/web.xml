<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	 version="2.4">

	<display-name>teatime</display-name>

	 <!--  
	      There are three means to configure Wickets configuration mode and they are
	      tested in the order given. 
	      1) A system property: -Dwicket.configuration
	      2) servlet specific <init-param>
	      3) context specific <context-param>
	      The value might be either "development" (reloading when templates change)
	      or "deployment". If no configuration is found, "development" is the default.
	-->

	<filter>
		<filter-name>wicket.teatime</filter-name>
 		<filter-class>org.apache.wicket.protocol.http.WicketFilter</filter-class>
		<init-param>
			<param-name>applicationClassName</param-name>
			<param-value>org.apache.wicket.teatime.WicketApplication</param-value>
 		</init-param>
        <init-param>
            <param-name>wicket.configuration</param-name>
            <param-value>deployment</param-value>
         </init-param>
        <!--
            IRC settings for the logbot server
             irc.output  - the output folder where the logbot writes its files, and
                           where the browser locates its files, defaults to /tmp/logbot
             irc.nick    - the nickname for the logbot, defaults to teatime
             irc.server  - the IRC server, defaults to irc.freenode.net
             irc.channel - the IRC channel, defaults to ##wicket
             irc.joinMessage - the join message
             irc.start   - should the IRC logbot start or not, defaults to false.
                           To start the logbot the value should be true

        -->
        <init-param>
            <param-name>irc.start</param-name>
            <param-value>true</param-value>
         </init-param>
 	</filter>

 <filter-mapping>
  <filter-name>wicket.teatime</filter-name>
	<url-pattern>/*</url-pattern>
 </filter-mapping>


</web-app>
