<?xml version="1.0" encoding="UTF-8"?>

<project>
  <pomVersion>3</pomVersion>
  <groupId>wicket</groupId>
  <id>wicket-examples-flickr</id>
  <name>Wicket Flickr</name>
  <currentVersion>1.0</currentVersion>
  <organization>
    <name>Wicket</name>
    <url>http://wicket.sourceforge.net</url>
    <logo>http://wicket.sourceforge.net/images/organizationLogo.png</logo>
  </organization>
  <inceptionYear>2005</inceptionYear>
  <package>wicket.examples.flickr</package>
  <logo>/images/projectLogo.png</logo>
  <description>A demo application for showing off Wicket's capabilities using the Flickr api and Scriptaculous, modeled after the demo of Ruby on Rails.</description>
  <shortDescription>Search Flickr images based on a tag.</shortDescription>
  <url>http://wicket.sourceforge.net/${pom.artifactId}</url>
  <issueTrackingUrl>http://sourceforge.net/tracker/?group_id=${maven.sourceforge.project.groupId}</issueTrackingUrl>
  <siteAddress>shell.sourceforge.net</siteAddress>
  <siteDirectory>/home/groups/w/wi/wicket/htdocs/${pom.artifactId}</siteDirectory>
  <repository>
    <connection>scm:cvs:pserver:anoncvs@cvs.sourceforge.net:/cvsroot/wicket:${pom.artifactId}</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/wicket:${pom.artifactId}</developerConnection>
    <url>http://cvs.sourceforge.net/viewcvs.py/wicket/${pom.artifactId}</url>
  </repository>
  <versions>
    <version>
      <id>1.0</id>
      <name>1.0</name>
      <tag>WICKET_FLICKR_R_1_0</tag>
    </version>
  </versions>
  <dependencies>
    <dependency>
      <groupId>wicket</groupId>
      <artifactId>wicket</artifactId>
      <version>1.2-SNAPSHOT</version>
      <type>jar</type>
      <properties>
        <eclipse.dependency>true</eclipse.dependency>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>flickrj</groupId>
      <artifactId>flickrapi</artifactId>
      <version>1.0a9</version>
      <type>jar</type>
      <properties>
        <eclipse.dependency>false</eclipse.dependency>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <!--		
			===================================================================
			== Dependencies for using Wicket container                       ==
			===================================================================
		-->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <url>http://www.junit.org</url>
      <properties>
        <wicket.group>test</wicket.group>
        <wicket.description>Used for testing Wicket</wicket.description>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>1.2.12</version>
      <url>http://logging.apache.org/log4j</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>2.3</version>
      <jar>servletapi-2.3.jar</jar>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>1.0.4</version>
      <url>http://jakarta.apache.org/commons/logging/</url>
      <properties>
        <war.bundle>true</war.bundle>
      </properties>
    </dependency>
    <!--		
			===================================================================
			== Dependencies for using Jetty servlet container                ==
			===================================================================
		-->

    <dependency>
      <groupId>jetty</groupId>
      <artifactId>org.mortbay.jetty</artifactId>
      <version>4.2.22</version>
      <type>jar</type>
      <url>http://www.mortbay.com</url>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-runtime</artifactId>
      <version>4.1.30</version>
      <type>jar</type>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
    <dependency>
      <groupId>tomcat</groupId>
      <artifactId>jasper-compiler</artifactId>
      <version>4.1.30</version>
      <type>jar</type>
      <properties>
        <war.bundle>false</war.bundle>
      </properties>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>src/main/java</sourceDirectory>
    <unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>src/test/java</directory>
          <includes>
            <include>**</include>
          </includes>
          <excludes>
            <exclude>**/*.java</exclude>
          </excludes>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>src/main/java</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
        <filtering>false</filtering>
      </resource>
      <resource>
        <directory>src/test/java</directory>
        <includes>
          <include>**</include>
        </includes>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
  <reports>
    <report>maven-license-plugin</report>
  </reports>
  <properties/>
</project>
