package net.sf.ipn.dynweb;

import wicket.model.IModel;
import wicket.RequestCycle;
import wicket.markup.ComponentTag;
import wicket.markup.MarkupStream;
import wicket.markup.html.form.FormComponent;

import java.io.Serializable;

/**
 * A text field that can be generated from a span tag. This is used for dynamic
 * form building.
 * 
 * Single-line text editing component for a dynamic form. This replaces a
 * &lt;span id="wcn-***"&gt;something&lt;/span&gt; set of tags
 */
public final class DynTextField extends TextField
{

  /**
   * @see wicket.Component#handleComponentTag(RequestCycle, ComponentTag)
   */
  protected void onComponentTag(final ComponentTag tag)
  {
    tag.setName("input");
    tag.put("type", "text");
    // TODO: set length, maxlength, etc from metadata
    tag.put("value", getModelObjectAsString());
    super.onComponentTag(tag);
  }

}