<!DOCTYPE hibernate-configuration PUBLIC 
	"-//Hibernate/Hibernate Configuration DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<!-- Settings for a local HSQL database. -->
		<property name="dialect">org.hibernate.dialect.HSQLDialect</property>
		<property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.url">jdbc:hsqldb:bindExample</property>
		<property name="connection.username">sa</property>
		<property name="connection.password"></property>

		<!-- Print SQL to stdout. -->
		<property name="show_sql">true</property>

        <!-- Refresh database on each build of SessionFactory and drop it on close. -->
        <property name="hbm2ddl.auto">create-drop</property>
        
		<!-- Use the C3P0 connection pool.
		<property name="c3p0.min_size">3</property>
		<property name="c3p0.max_size">5</property>
		<property name="c3p0.timeout">1800</property>
		-->
        
        <!-- And some other random settings -->
        <property name="cache.use_second_level_cache">false</property>
		<property name="max_fetch_depth">3</property>

        <!-- Annotated EJB3 entity beans. -->
        <mapping class="wicket.examples.cdapp.model.Category"/>
        <mapping class="wicket.examples.cdapp.model.Album"/>
        <mapping class="wicket.examples.cdapp.model.Track"/>

	</session-factory>
</hibernate-configuration>