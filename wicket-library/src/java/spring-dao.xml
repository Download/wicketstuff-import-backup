  <bean id="hibernateInterceptor" class="org.springframework.orm.hibernate3.HibernateInterceptor">
    <property name="sessionFactory"><ref bean="sessionFactory"/></property>
  </bean>
  
  <bean id="UserDao" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>wicket.addons.hibernate.IUserDao</value>
    </property>
    <property name="interceptorNames">
      <!-- value>transactionInterceptor,UserDaoTarget</value -->
      <value>hibernateInterceptor,UserDaoTarget</value>
    </property>  
  </bean>

  <bean id="AddonDao" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>wicket.addons.hibernate.IAddonDao</value>
    </property>
    <property name="interceptorNames">
      <!-- value>transactionInterceptor,AddonDaoTarget</value -->
      <value>AddonDaoTarget</value>
    </property>  
  </bean>

  <bean id="AddonDAO" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="proxyInterfaces">
      <value>wicket.addons.hibernate.dao.AddonDAO</value>
    </property>
    <property name="interceptorNames">
      <!-- value>transactionInterceptor,AddonDaoTarget</value -->
      <value>AddonDAOTarget</value>
    </property>  
  </bean>

